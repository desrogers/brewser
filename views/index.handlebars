<div class="row my-4 p-5">
  <div class="col-md"></div>
  <div class="col-md-6">
    <h1 class="text-center display-2">Brewser</h1>
    <img src="/assets/img/flight.png" class="img-fluid" alt="Beer">
  </div>
  <div class="col-md"></div>
</div>

<div class="row my-5">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-12">
        <h2 class="text-center">Add to Your Brewse List</h2>
        <form class="create-form text-center">
          <div class="form-group">
            <input class="form-control" type="text" id="brew" name="brew_name" placeholder="7-Eleven Exclusive Blend">
          </div>

          <button type="submit" class="btn btn-outline-primary">Submit</button>
        </form>
      </div>
    </div>

    <div class="row my-5">
      <div class="col-md-12">
        <div class="text-center">
          <div class="h3">To Brewse</div>
          <small class="text-muted mb-3">(click to move to your Brewser History)</small>
        </div>

        <div class="list-group list-group-flush">
          {{#each brews}}
          {{#unless tasted}}
          {{> brews/brews-block tasted=true }}
          {{/unless}}
          {{/each}}
        </div>

      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-12">
        <div class="h4 text-center">Your Brewser History</div>

        <div class="list-group list-group-flush">
          {{#each brews}}
          {{#if tasted}}
          {{> brews/brews-block tasted=false }}
          {{/if}}
          {{/each}}
        </div>

      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <footer></footer>
      </div>
    </div>

  </div>
  <div class="col-md-3"></div>
</div>